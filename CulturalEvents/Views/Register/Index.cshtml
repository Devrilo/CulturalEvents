
@model CulturalEvents.Models.Register.RegisterModel

@{
	ViewBag.Title = "Rejestracja";
}

<body style="background-color: black; color: #9d9d9d">
	<div style="width: 25%; margin-left: 27%; color: #9d9d9d;  background-color: #222; position: fixed; top: 12.5%; height: 70%; border-style: solid; border-width: 5px; border-color: orangered; border-radius: 5px;">
		<h2 style="text-align: center; margin-top: 7.5%">Rejestracja</h2>
		@using (Html.BeginForm("register", "Register", FormMethod.Post))
		{
			<div>
				<h4 style="text-align: center; margin-top: 7%">Imię:</h4>
				@Html.TextBoxFor(a => a.Name, new { @style = "width: 100%; height: 30px; font-size: 20px; background-color: black; border-color: black" })
			</div>
			<div>
				<h4 style="text-align: center; margin-top: 5%">Nazwisko:</h4>
				@Html.TextBoxFor(a => a.Surname, new { @style = "width: 100%; height: 30px; font-size: 20px; background-color: black; border-color: black" })
			</div>
			<div>
				<h4 style="text-align: center; margin-top: 5%">Email:</h4>
				@Html.TextBoxFor(a => a.Email, new { @type = "email", @style = "width: 100%; height: 30px; font-size: 20px; background-color: black; border-color: black" })
			</div>
			<div>
				<h4 style="text-align: center; margin-top: 5%">Numer telefonu:</h4>
				@Html.TextBoxFor(a => a.Telephone, new { @style = "width: 100%; height: 30px; font-size: 30px; background-color: black; border-color: black" })
			</div>
			<div>
				<h4 style="text-align: center; margin-top: 5%">Hasło:</h4>
				@Html.TextBoxFor(a => a.Password, new { @type = "password", @style = "width: 100%; height: 30px; font-size: 20px; background-color: black; border-color: black" })
			</div>
			<div style=" display: flex; align-items: center; justify-content: center; margin-top: 6%">
				<button type="submit" class="btn btn-info btn-lg" style="background-color: orangered; border-color: orangered">Zarejestruj</button>
			</div>
			}
			</div>
		</div>
</body>

