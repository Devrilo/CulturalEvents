@model CulturalEvents.Models.Events.EventsAddModel
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<h1>@ViewBag.Title</h1>

@{
	if (HttpContextAccessor.HttpContext.Request.Cookies["user"] != null)
	{
	}
	else
	{
		HttpContextAccessor.HttpContext.Response.Redirect("/Login");
	}
}

<body style="background-color: black; color: #9d9d9d">
	<div style="width: 80%; color: #9d9d9d;  background-color: #222; position: fixed; top: 12.5%; height: 82%; border-style: solid; border-width: 5px; border-color: orangered; border-radius: 5px;">
		<h2 style="text-align: center; margin-top: 2%">Dodawanie wydarzenia</h2>
		@using (Html.BeginForm("New", "Events", FormMethod.Post, new { @enctype = "multipart/form-data" }))
		{
			<div style="float: left; width: 33.3%; display: block; height: inherit;">
				<div>
					<h4 style="text-align: center; margin-top: 3%">Nazwa wydarzenia:</h4>
					@Html.TextBoxFor(e => e.Title, new { @style = "width: 90%; margin-left: 5%; height: 22px; font-size: 16px; background-color: black; border-color: black" })
				</div>
				<div>
					<h4 style="text-align: center; margin-top: 5%">Nazwa miasta:</h4>
					@Html.TextBoxFor(e => e.City, new { @style = "width: 90%; margin-left: 5%; height: 22px; font-size: 16px; background-color: black; border-color: black" })
				</div>
				<div>
					<h4 style="text-align: center; margin-top: 5%">Nazwa ulicy:</h4>
					@Html.TextBoxFor(e => e.Street, new { @style = "width: 90%; margin-left: 5%; height: 22px; font-size: 16px; background-color: black; border-color: black" })
				</div>
				<div>
					<h4 style="text-align: center; margin-top: 5%">Numer domu:</h4>
					@Html.TextBoxFor(e => e.HouseNumber, new { @style = "width: 90%; margin-left: 5%; height: 22px; font-size: 16px; background-color: black; border-color: black" })
				</div>
				<div>
					<h4 style="text-align: center; margin-top: 5%">Numer lokalu:</h4>
					@Html.TextBoxFor(e => e.ApartmentNumber, new { @style = "width: 90%; margin-left: 5%; height: 22px; font-size: 16px; background-color: black; border-color: black" })
				</div>
				<div>
					<h4 style="text-align: center; margin-top: 5%">Kod pocztowy:</h4>
					@Html.TextBoxFor(e => e.PostalCode, new { @style = "width: 90%; margin-left: 5%; height: 22px; font-size: 16px; background-color: black; border-color: black" })
				</div>
			</div>
			<div style="margin-left: 33.3%; margin-right: 33.3%; width: 33.3%; display: block; height: inherit;">
				<div>
					<h4 style="text-align: center; padding-top: 3%">Data rozpoczęcia:</h4>
					@Html.TextBoxFor(e => e.DateStart, new { @type = "datetime-local", @style = "background-color: black; border-color: black; width: 100%; height: 22px; font-size: 16px;" })
				</div>
				<div>
					<h4 style="text-align: center; margin-top: 5%">Data zakończenia:</h4>
					@Html.TextBoxFor(e => e.DateEnd, new { @type = "datetime-local", @style = "background-color: black; border-color: black; width: 100%; height: 22px; font-size: 16px;" })
				</div>
				<div>
					<h4 style="text-align: right; margin-top: 5%">Opis:</h4>
					@Html.TextAreaFor(e => e.Description, 8, 97, new { @style = "background-color: black; border-color: black" })
				</div>
				<div>
					<h4 style="text-align: center; margin-top: 2.1%;">Kategoria:</h4>
					<select name="category" style="background-color: black; border-color: black; width: 100%; height: 22px; font-size: 16px;">
						<option value="1">Festiwal</option>
						<option value="2">Impreza</option>
						<option value="3">Kino</option>
						<option value="4">Koncert</option>
						<option value="5">Pokaz</option>
						<option value="6">Sport</option>
						<option value="7">Spotkanie</option>
						<option value="8">Taniec</option>
						<option value="9">Teatr</option>
						<option value="10">Wystawa</option>
						<option value="11">Inna</option>
					</select>
				</div>
				<div style="position: fixed; justify-content: center; top: 30%; left: 66.5%">
					<h4 style="position: fixed; justify-content: center; top: 23.8%; left: 72%">Zdjęcie:</h4>
					<img id="img" width="217px" height="93px;">
					<input type="file" accept="image/*" name="picFile" id="picFile" onChange="document.getElementById('img').src = window.URL.createObjectURL(this.files[0])">
				</div>
			</div>
			<div style="position: fixed; justify-content: center; top: 83%; left: 68%">
				<button type="submit" class="btn btn-info btn-lg" style="background-color: orangered; border-color: orangered">Dodaj wydarzenie</button>
			</div>
		}
	</div>
</body>
