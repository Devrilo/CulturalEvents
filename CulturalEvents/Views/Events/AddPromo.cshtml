
@{
    ViewData["Title"] = "AddPromo";
}

<body style="background-color: black; color: #9d9d9d">
	<div style="width: 50%; color: #9d9d9d;  background-color: #222; position: fixed; top: 12.5%; height: 86%; border-style: solid; border-width: 5px; border-color: orangered; border-radius: 5px;">
		<h2 style="text-align: center; margin-top: 2%">Dodawanie promowanego wydarzenia</h2>
		@using (Html.BeginForm("New", "Events", FormMethod.Post, new { @enctype = "multipart/form-data" }))
		{
			<div>
				<div>
					<h4 style="text-align: center; margin-top: 5%; width: 100%">Górny tekst:</h4>
					<input style="width: 100%; height: 22px; font-size: 16px; background-color: black; border-color: black" />
				</div>
			</div>
			<div>
				<div>
					<h4 style="text-align: center; margin-top: 3%; width: 100%">Dolny tekst:</h4>
					<input style="width: 100%; height: 22px; font-size: 16px; background-color: black; border-color: black" />
				</div>
			</div>
			<div>
				<div>
					<h4 style="top: 23.8%; left: 72%; text-align: center; margin-top: 5%; width: 100%" >Zdjęcie:</h4>
					<img id="img" width="350px" height="93px;" style="margin-left: 23%">
					<input type="file" accept="image/*" style="margin-left: 23%" name="picFile" id="picFile" onChange="document.getElementById('img').src = window.URL.createObjectURL(this.files[0]) ">
				</div>
			</div>
			<div style="position: fixed; justify-content: center; top: 83%; left: 26.5%">
				<button type="submit" class="btn btn-info btn-lg" style="background-color: orangered; border-color: orangered">Dodaj wydarzenie</button>
			</div>
		}
	</div>
</body>