@model CulturalEvents.Models.Accounts.AccountsEditModel
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
	ViewData["Title"] = "Edit";
}

@{
	if ((HttpContextAccessor.HttpContext.Request.Cookies["user"] != null
		&& int.Parse(HttpContextAccessor.HttpContext.Request.Cookies["user"]) == Model.Id)
		|| HttpContextAccessor.HttpContext.Request.Cookies["admin"] == "1")
	{
	}
	else
	{
		HttpContextAccessor.HttpContext.Response.Redirect("/Home/Privacy");
	}
}

<body style="background-color: black; color: #9d9d9d">
	<div style="width: 25%; margin-left: 27%; color: #9d9d9d;  background-color: #222; position: fixed; top: 12.5%; height: 75%; border-style: solid; border-width: 5px; border-color: orangered; border-radius: 5px;">
		<h2 style="text-align: center; margin-top: 7.5%">Edycja profilu</h2>
		@using (Html.BeginForm("Update", "Accounts", FormMethod.Post))
		{
			<div>
				<h4 style="text-align: center; margin-top: 7%">Imię:</h4>
				@Html.TextBoxFor(a => a.Name, new { @Value = Model.Name, @style = "width: 100%; height: 30px; font-size: 20px; background-color: black; border-color: black" })
			</div>
			<div>
				<h4 style="text-align: center; margin-top: 5%">Nazwisko:</h4>
				@Html.TextBoxFor(a => a.Surname, new { @Value = Model.Surname, @style = "width: 100%; height: 30px; font-size: 20px; background-color: black; border-color: black" })
			</div>
			<div>
				<h4 style="text-align: center; margin-top: 5%">Email:</h4>
				@Html.TextBoxFor(a => a.Email, new { @type = "email", @Value = Model.Email, @style = "width: 100%; height: 30px; font-size: 20px; background-color: black; border-color: black" })
			</div>
			<div>
				<h4 style="text-align: center; margin-top: 5%">Nr Telefonu:</h4>
				@Html.TextBoxFor(a => a.Telephone, new { @Value = Model.Telephone, @style = "width: 100%; height: 30px; font-size: 20px; background-color: black; border-color: black" })
			</div>
			<input type="hidden" id="id" name="id" value="@Model.Id"/>
			<div style=" display: flex; align-items: center; justify-content: center; margin-top: 6%">
				<button type="submit" class="btn btn-info btn-lg" style="background-color: orangered; border-color: orangered">Edytuj profil</button>
			</div>
		}
	</div>
	</div>
</body>

